<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sebastian.smb.SettingsActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/font_size"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/font_size"
        android:layout_marginStart="27dp"
        android:gravity="center_vertical"
        android:text="@string/rozmiar_czcionki" />

    <EditText
        android:id="@+id/font_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/colour"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/colour"
        android:layout_marginStart="27dp"
        android:gravity="center_vertical"
        android:text="@string/kolor" />

    <EditText
        android:id="@+id/colour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/font_size"
        android:layout_below="@+id/font_size"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/applyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="@string/zastosuj"
        android:onClick="applySettingsEvent"/>
</RelativeLayout>
